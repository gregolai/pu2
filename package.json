{
	"name": "pu2",
	"version": "0.0.6",
	"description": "A library written in TypeScript",
	"keywords": [],
	"main": "./bundles/index.umd.js",
	"module": "./esm5/index.js",
	"es2015": "./esm2015/index.js",
	"typings": "./types/index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/gregolai/pu2"
	},
	"author": "Gregory Dalton <gregolai@gmail.com>",
	"license": "MIT",
	"engines": {
		"node": ">=12.10",
		"npm": ">=6.11"
	},
	"config": {},
	"scripts": {
		"build": "tsc && tsc --target es2018 --outDir dist/esm2015 && rollup -c config/rollup.config.js && rollup -c config/rollup.config.js --environment NODE_ENV:production",
		"cleanup": "rm -rf dist",
		"commit": "git-cz",
		"format:fix": "npm run format -- --write",
		"format": "prettier \"**/*.{ts,tsx,js,jsx,css,scss,sass,less}\"",
		"lint:fix": "npm run lint -- --fix",
		"lint": "tslint --project tsconfig.json --format codeFrame",
		"postbuild": "node scripts/copy && npm run size",
		"postrelease": "node scripts/copy && node scripts/build && npm run release:github && npm run release:npm",
		"prebuild": "npm run cleanup && npm run verify",
		"prerelease": "npm run build",
		"release:github": "git push --no-verify --follow-tags origin master",
		"release:npm": "npm publish dist",
		"release:preflight": "npm pack ./dist --dry-run",
		"release": "standard-version",
		"size": "node scripts/file-size ./dist/bundles/index.umd.min.js ./dist/bundles/index.esm.min.js",
		"style:fix": "npm run format:fix && npm run lint:fix",
		"style": "npm run format -- --list-different && npm run lint",
		"test:ci": "npm run test -- --ci",
		"test:coverage": "npm run test -- --coverage",
		"test:watch": "npm run test -- --watch",
		"test": "jest -c ./config/jest.config.js",
		"validate-js": "tsc -p ./config && tsc -p ./scripts",
		"verify": "npm run validate-js && npm run style && npm run test:ci"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm run style && npm run test -- --bail --onlyChanged"
		}
	},
	"lint-staged": {
		"**/*.{ts,tsx,js,jsx,css,scss,sass,less}": [
			"prettier --write",
			"git add"
		],
		"src/**/*.{ts,tsx}": [
			"git add"
		]
	},
	"peerDependencies": {
		"tslib": ">=1.10.0"
	},
	"dependencies": {
		"lodash": "^4.17.15"
	},
	"devDependencies": {
		"@types/jest": "23.3.10",
		"@types/lodash": "^4.14.149",
		"@types/node": "^12.12.27",
		"@types/prettier": "1.15.2",
		"@types/react": "^16.9.19",
		"@types/webpack-config-utils": "2.3.0",
		"brotli-size": "^4.0.0",
		"gzip-size": "^5.1.1",
		"husky": "^4.2.3",
		"jest": "^25.1.0",
		"jest-watch-typeahead": "^0.4.2",
		"json5": "^2.1.1",
		"kleur": "^3.0.3",
		"lint-staged": "^10.0.7",
		"prettier": "^1.19.1",
		"pretty-bytes": "^5.3.0",
		"rollup": "0.68.2",
		"rollup-plugin-commonjs": "9.2.0",
		"rollup-plugin-json": "3.1.0",
		"rollup-plugin-node-resolve": "4.0.0",
		"rollup-plugin-replace": "2.1.0",
		"rollup-plugin-sourcemaps": "0.4.2",
		"rollup-plugin-terser": "3.0.0",
		"rollup-plugin-uglify": "6.0.0",
		"standard-version": "^7.1.0",
		"ts-jest": "^25.2.0",
		"tslib": "^1.10.0",
		"tslint": "^6.0.0",
		"tslint-config-prettier": "^1.18.0",
		"tslint-config-standard": "^9.0.0",
		"tslint-etc": "^1.10.0",
		"tslint-react": "^4.2.0",
		"typescript": "^3.7.5",
		"typescript-tslint-plugin": "^0.5.5",
		"webpack-config-utils": "2.3.1"
	}
}
