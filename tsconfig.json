{
	"compilerOptions": {
		"declaration": true,
		"declarationDir": "dist/types",
		"declarationMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"jsx": "react",
		"lib": ["dom", "es2018"],
		"module": "esnext",
		"moduleResolution": "node",
		"outDir": "dist/esm5",
		"plugins": [
			{
				"alwaysShowRuleFailuresAsWarnings": false,
				"name": "typescript-tslint-plugin"
			}
		],
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"stripInternal": true,
		"target": "es5"
	},
	"exclude": ["./**/__tests__"],
	"include": ["./src"]
}
