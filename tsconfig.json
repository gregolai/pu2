{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"declaration": true,
		"esModuleInterop": true,
		// "incremental": true,
		"jsx": "react",
		"lib": ["ESNext", "DOM"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
    	"noImplicitThis": true,
		"outDir": "dist/cjs",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": ["src/**/*.test.ts"],
	"include": ["src/**/*"],
}
