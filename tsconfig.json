{
	"compilerOptions": {
		"allowJs": true,
		"alwaysStrict": true,
		"declaration": true,
		"esModuleInterop": true,
		"inlineSourceMap": true,
		"jsx": "react",
		// "module": "<ESNext|CommonJS>",
		"moduleResolution": "Node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
    	"noImplicitThis": true,
		// "outDir": "dist/<esm|cjs>",
		"skipLibCheck": true,
		"strict": true,
		"target": "ESNext"
	},
	"exclude": ["src/**/*.test.ts"],
	"include": ["src"]
}
